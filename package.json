  "dependencies": {
    "@statisticsnorway/dapla-js-utilities": "^0.1.1",
    "ace-builds": "^1.4.11",
    "axios": "^0.19.2",
    "axios-hooks": "^2.1.0",
    "chart.js": "^2.9.3",
    "graphql-hooks": "^4.4.4",
