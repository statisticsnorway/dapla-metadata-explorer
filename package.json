{
  "name": "dapla-metadata-explorer",
  "version": "0.2.0",
  "description": "Metadata exploration through GSIM for Statistics Norway Dataplatform",
  "repository": {
    "type": "git",
    "url": "https://github.com/statisticsnorway/dapla-metadata-explorer"
  },
  "author": "Statistics Norway",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "dependencies": {
    "@statisticsnorway/dapla-js-utilities": "^0.2.0",
    "ace-builds": "^1.4.11",
    "axios": "^0.21.0",
    "axios-hooks": "^2.1.0",
    "graphql-hooks": "^5.0.0",
    "react": "^17.0.1",
    "react-ace": "^9.0.0",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.3",
    "react-error-boundary": "^3.0.2",
    "react-hook-form": "^6.10.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "react-table-6": "^6.11.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.0",
    "uuid": "^8.3.0"
  },
  "scripts": {
    "prestart": "react-env --dest ./public",
    "start": "react-scripts start",
    "build": "react-scripts build && react-env --dest ./build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@beam-australia/react-env": "^2.1.2",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^11.0.1",
    "@testing-library/user-event": "^12.0.11",
    "jest-localstorage-mock": "^2.4.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/index.js",
      "!src/**/index.js",
      "!src/configurations/**",
      "!src/enums/**",
      "!src/utilities/**",
      "!src/__tests__/test-data/**",
      "!src/components/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text"
    ]
  }
}
